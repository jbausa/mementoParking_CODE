<div class="jumbotron fixed-top">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Registrarse</h3>
    </div>
    <div class="panel-body"> 

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field" style="margin-bottom:10px;">
        
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>

      <div class="field" style="margin-bottom:10px;">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña" %>
      </div>

      <div class="field" style="margin-bottom:10px;">
        
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Repetir Contraseña" %>
      </div>

      <div class="actions">
        <%= f.submit "Registrarse", class: "btn btn-default" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>