<% provide(:title, "Registrarse") %>
<div class="jumbotron fixed-top">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Registrarse</h3>
    </div>
    <div class="panel-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
      

      <div class="field">
        <%= f.email_field :email, autofocus: true, placeholder: "Email" %>
      </div>

      <div class="field">
        <% if @minimum_password_length %>
        <em>(La contraseña debe tener un mínimo de <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Contraseña" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Repetir Contraseña" %>
      </div>

      <div class="actions">
        <%= f.submit "Registrarse", :class => "btn btn-primary" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>