<div class="jumbotron fixed-top">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Acceder</h3>
    </div>
    <div class="panel-body"> 
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field" style="margin-bottom:10px;">
        <%= f.text_field :email, placeholder: "Email", autofocus: true %>
      </div>

      <div class="field" style="margin-bottom:10px;">
        
        <%= f.password_field :password, autocomplete: "off", placeholder: "ContraseÃ±a" %>

      </div>

      <% if devise_mapping.rememberable? -%>
      <div class="field" style="margin-bottom:10px;">
        <%= f.check_box :remember_me %>
        <%= f.label "Recordar" %>
      </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Acceder", class: "btn btn-default" %>
      </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>